                </div>
                <div class="col-8">
                    <label id="Result"></label>
                </div>
            </div>
        </div>
    </div>
</div>


    <script>
        $(".shadow").hide();
        $(document).ready(function () {
       // getDatenow();
        LoadData();
        });

        function shadowclick() {
            $(".shadow").hide();
        }
    function getDatenow() {
        var today = new Date();
        var date = today.getHours() + ":" + today.getMinutes() + ":" + today.getSeconds() + " | " + today.getFullYear() + '-' + (today.getMonth() + 1) + '-' + today.getDate();
        $("#txtTime").val(date);
        setInterval(function () { getDatenow() }, 1000);
    }

    function startReceived() {
        var getUserid = $("#txtUser").attr("data-id");
        var param = {
            "UserID": getUserid
        }
        $.ajax({
            url: '/Received/Insert',
            type: 'POST',
            dataType: 'html',
            data: { "data": JSON.stringify(param) },
            success: function (data, status, xhr) {
                LoadData();
            },
            error: function (xhr, status, error) {
                alert(status);
            }
        });
    }

    function LoadData() {
        var getUserid = $("#txtUser").attr("data-id");
        var param = {
            "UserID": getUserid
        }
        $.ajax({
            url: '/Received/LoadData',
            data: param,
            dataType: 'html',
            success: function (data, status, xhr) {
                $("#tbody").html(data);
                //$('#tbHistory').DataTable({
                //    "responsive": false, "lengthChange": false, "autoWidth": true,
                //    "searching": true,
                //    //"buttons": ["excel", "pdf", "colvis"]
                //    "buttons": ["excel", "pdf"]
                //}).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            },
            error: function (xhr, status, error) {
                alert(status);
            }
        });
    }

    function DeleteRecived(id) {

        swal({
            title: "Xóa đơn?",
            text: "Bạn có muốn xóa đơn này!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
.then((willDelete) => {
    if (willDelete) {
        var param = {
            "ReceivedID": id
        }
        $.ajax({
            url: '/Received/DeleteRecived',
            data: param,
            type: "POST",
            dataType: 'html',
            success: function (data, status, xhr) {
                LoadData();
            },
            error: function (xhr, status, error) {
                alert(status);
            }
        });
    } else {
    }
});
    }



    </script>
