    </div><!-- /.container-fluid -->
</section>
<div class="shadow" onclick="shadowclick()" style="cursor:pointer;">
    <div id="tgModal">
        <div class="form-group">
            <div class="row">
                <div class="col-4">
                    <strong>STT :</strong>
                </div>
                <div class="col-8">
                    <label id="STT"></label>
                </div>
                <div class="col-4">
                    <strong>Hình thức :</strong>
                </div>
                <div class="col-8">
                    <label id="Type"></label>
                </div>
                <div class="col-4">
                    <strong >Tổng thời gian :</strong>
                </div>
                <div class="col-8">
                    <label id="TimesResult"></label>
                </div>
                <div class="col-4">
                    <strong>KPI :</strong>
                </div>
                <div class="col-8">
                    <label id="KPI"></label>
                </div>
                <div class="col-4">
