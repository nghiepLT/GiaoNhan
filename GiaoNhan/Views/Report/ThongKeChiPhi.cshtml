                                                <option value="6">
                                                    Tháng 6
                                                </option>
                                                <option value="7">
                                                    Tháng 7
                                                </option>
                                                <option value="8">
                                                    Tháng 8
                                                </option>
                                                <option value="9">
                                                    Tháng 9
                                                </option>
                                                <option value="10">
                                                    Tháng 10
                                                </option>
                                                <option value="11">
                                                    Tháng 11
                                                </option>
                                                <option value="12">
                                                    Tháng 12
                                                </option>
                                            </select>
                                            <i class="fas fa-calendar" style="position: absolute;left: 17px;top: 43px;"></i>
                                        </div>
